                            <sort_order>201</sort_order>
                        </categories>
                    </children>
                </things>
            </children>
        </cms>
    </menu>
    <acl>
        <resources>
            <admin>
                <children>
                    <cms>
                        <children>
                            <things translate="title" module="things">
                                <title>Dynamic Content</title>
                                <children>
                                    <data translate="title" module="things">
                                        <title>Posts</title>
                                    </data>
                                    <categories translate="title" module="things">
                                        <title>Categories</title>
                                    </categories>
                                </children>
                            </things>
                        </children>
                    </cms>
                </children>
