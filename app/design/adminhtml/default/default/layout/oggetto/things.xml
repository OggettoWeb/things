<layout>
    <adminhtml_things_index>
        <reference name="content">
            <block type="things/adminhtml_thing" name="thing_container" as="thing" />
        </reference>
    </adminhtml_things_index>
    <adminhtml_things_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="things/adminhtml_thing_edit" name="thing_edit"/>
        </reference>
    </adminhtml_things_edit>
    <adminhtml_things_categories_index>
        <reference name="content">
            <block type="things/adminhtml_category" name="category_container" as="category" />
        </reference>
    </adminhtml_things_categories_index>
    <adminhtml_things_categories_edit>
        <reference name="content">
            <block type="things/adminhtml_category_edit" name="category_edit"/>
        </reference>
    </adminhtml_things_categories_edit>
</layout>
